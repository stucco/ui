section.page.alert-details
  
  .panel.panel-primary
    .panel-heading
      div.pull-right
        button.close(type="button", aria-label="Close", data-hook="close")
          span(aria-hidden="true") &times;
      h3.panel-title
        span(data-hook='vertexType')
        span &nbsp; &#10230; &nbsp;
        span(data-hook='_id')

    .panel-body
      dl.dl-horizontal
        dt Name
        dd(data-hook='name')
        dt Description
        dd(data-hook='description')
        dt Edges
        dd
          ul.edgeList(data-hook='edge-list')

    .panel-footer
        nav
          ul.pager
            li.previous(data-hook="prevBtnContainer").disabled
              a(href="#", data-hook="prevBtn") <span aria-hidden="true">&larr;</span> Previous
            li.next(data-hook="nextBtnContainer")
              a(href="#", data-hook="nextBtn") Next <span aria-hidden="true">&rarr;</span>